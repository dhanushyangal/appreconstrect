<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_menu_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Theme"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/box_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Box Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />

    <Button
        android:id="@+id/post_it_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post-it Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />

    <Button
        android:id="@+id/premium_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premium Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />

    <Button
        android:id="@+id/animal_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ruby Reds Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />

    <Button
        android:id="@+id/sport_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winter Warmth Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />

    <Button
        android:id="@+id/watercolor_theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coffee Hues Vision Board"
        android:textColor="#000000"
        android:background="@drawable/rounded_button_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start|center_vertical" />
</LinearLayout> 