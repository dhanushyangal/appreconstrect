<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Calendar Theme"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/animal_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animal Theme"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/summer_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summer Theme"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/spaniel_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spaniel Theme"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/happy_couple_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy Couple Theme"/>

</LinearLayout> 